<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/boutonConnecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="Connecter" />

    <TextView
        android:id="@+id/titreEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="83dp"
        android:layout_toLeftOf="@+id/boutonConnecter"
        android:text="Email" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titreEmail"
        android:layout_below="@+id/titreEmail"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/titreMDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEmail"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="32dp"
        android:text="Mot de passe" />

    <EditText
        android:id="@+id/editTextMDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titreMDP"
        android:layout_below="@+id/titreMDP"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/boutonSInscrire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boutonConnecter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="S'inscrire" />

    <Button
        android:id="@+id/boutonRemplir1TTT"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextMDP"
        android:layout_below="@+id/editTextMDP"
        android:text="1" />

    <Button
        android:id="@+id/boutonRemplir2TTT"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boutonRemplir1TTT"
        android:layout_toRightOf="@+id/boutonRemplir1TTT"
        android:text="2" />

    <Button
        android:id="@+id/boutonRemplir3TTT"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/boutonRemplir2TTT"
        android:layout_alignBottom="@+id/boutonRemplir2TTT"
        android:layout_toRightOf="@+id/boutonRemplir2TTT"
        android:text="3" />

    <Button
        android:id="@+id/boutonRemplir4TTT"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/boutonRemplir3TTT"
        android:layout_alignBottom="@+id/boutonRemplir3TTT"
        android:layout_toRightOf="@+id/boutonRemplir3TTT"
        android:text="4" />

</RelativeLayout>