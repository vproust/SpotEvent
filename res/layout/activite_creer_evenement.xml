<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/nomEvenementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        android:text="Nom de l&apos;événement"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/nomEvenementEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementTextView"
        android:layout_below="@+id/nomEvenementTextView"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/dateDebutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/nomEvenementEditText"
        android:layout_marginTop="30dp"
        android:text="Date de début"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/dateDebutEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/dateDebutTextView"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/heureDebutEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/dateDebutEditText"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/dateFinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/heureDebutEditText"
        android:text="Date de fin"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/dateFinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/dateFinTextView"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/heureFinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomEvenementEditText"
        android:layout_below="@+id/dateFinEditText"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/boutonSuivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="18dp"
        android:text="Suivant" />

    <Button
        android:id="@+id/buttonTestRemplir"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boutonSuivant"
        android:layout_alignRight="@+id/dateFinTextView"
        android:text="Remplir" />

</RelativeLayout>